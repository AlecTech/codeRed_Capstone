@using Microsoft.AspNetCore.Identity
@using codeRed_Capstone.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<nav class="nav justify-content-end">

    @if (SignInManager.IsSignedIn(User))
    {      
        <ul class="nav navbar-nav navbar-primary w-100 ml-auto nav-item">
       
            <li class="nav-link active nav-item">@Html.ActionLink("Home", "Index")</li>                  
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">  Settings @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Employee", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        </ul>       
    }

</nav>
